{
  "appId": "com.excalidraw.Excalidraw",
  "productName": "Excalidraw",
  "directories": {
    "output": "dist"
  },
  "files": [
    {
      "filter": [
        "**",
        "!**/__tests__",
        "!test",
        "!dev.js"
      ]
    }
  ],
  "win": {
    "icon": "build/icon.icns",
    "target": [
      {
        "target": "zip",
        "arch": [ "x64", "ia32" ]
      }
    ]
  },
  "linux": {
    "icon": "build/icon.icns",
    "category": "Development",
    "target": [
      {
        "target": "tar.gz",
        "arch": [ "x64" ]
      }
    ]
  },
  "mac": {
    "icon": "build/icon.icns",
    "hardenedRuntime": true,
    "target": [
      {
        "target": "dmg",
        "arch": [ "x64", "arm64"]
      }
    ]
  },
  "fileAssociations": [
    {
      "ext": "excalidraw",
      "name": "Excalidraw",
      "description": "Excalidraw file",
      "icon": "build/icon.png",
      "role": "Editor",
      "mimeType": "application/vnd.excalidraw+json"
    }
  ]
}
